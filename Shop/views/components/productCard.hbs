<div class="card" style="flex: 25%; margin: 10px; min-width: 250px">
  <div class="card-body d-flex flex-column justify-content-between">
    <h5 class="card-title fs-3">{{this.ProductName}}</h5>
    <p class="card-text">
      <p class="m-0 fw-bold">{{this.UnitPrice}} vnÄ‘</p>
      <p class="m-0"><strong>In stock:</strong> {{this.UnitsInStock}}</p>
      <p class="m-0"><strong>Category:</strong> {{this.CategoryName}}</p>
    </p>
    {{#if isLogin}}
      <a
        href="#"
        class="btn btn-primary"
        onclick="addProductToCart({{this.ProductID}})"
      >Add to cart</a>
    {{/if}}
  </div>
</div>

<script>
  function setCartQuantity() { const cart =
  JSON.parse(localStorage.getItem("cart")) || []; $(".cart").text(cart.length >
  99 ? "99+" : cart.length); } function addProductToCart(productID) { const cart
  = JSON.parse(localStorage.getItem("cart")) || []; localStorage.setItem("cart",
  JSON.stringify([...cart, productID])); setCartQuantity(); }
</script>